{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["mocha", "chai-friendly"],
  "rules": {
    "quotes": [1, "double", { "avoidEscape": true }],
    "no-console": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "root": true
}
